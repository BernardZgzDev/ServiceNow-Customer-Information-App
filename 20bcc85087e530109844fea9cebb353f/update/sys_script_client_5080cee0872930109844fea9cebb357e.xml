<?xml version="1.0" encoding="UTF-8"?><record_update sys_domain="global" table="sys_script_client">
    <sys_script_client action="INSERT_OR_UPDATE">
        <active>true</active>
        <applies_extended>false</applies_extended>
        <condition/>
        <description>Bernard Morales 21.07.2021&#13;
If Current scope field is AMS then AMS Details section is displayed.</description>
        <field>current_scope</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Display AMS Section</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
    
	if ( newValue === '' ) {
        return;
    }
	
	try {
		
		var currentScope =  g_form.getValue('current_scope');
		var isShown = false;

		if ( currentScope === 'ams') {

			isShown = true;
		}
		g_form.setSectionDisplay('ams_details', isShown);
	
	} catch ( err ) {
		
		g_form.addErrorMessage('Runtime err: ' + err );
		return;
	}
}]]></script>
